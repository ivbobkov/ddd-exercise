@model SalaryViewModel
@{
    Layout = "_Layout";
}

<form asp-controller="Balance" asp-action="AddSalary" class="my-3 p-3 bg-white rounded shadow-sm">
    <h6 class="border-bottom pb-2 mb-0">Add salary</h6>

    <div class="text-muted pt-3">
        <div class="form-row">
            <label asp-for="Salary.Amount" class="col-md-2"></label>
            <div class="form-group col-md-4">
                <input asp-for="Salary.Amount" type="number" class="form-control" />
            </div>

            <div class="form-group col-md-2">
                <select asp-for="Salary.Currency" asp-items="Model.Currencies" class="form-control"></select>
            </div>
        </div>

        <div class="form-row">
            <label asp-for="ReceivedAt" class="col-md-2"></label>
            <div class="form-group col-md-4">
                <input asp-for="ReceivedAt" class="form-control" />
            </div>
        </div>
    </div>
    
    <div class="d-block mt-3 text-right">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-controller="Balance" asp-action="Index" class="btn btn-link">Back</a>
    </div>
</form>
