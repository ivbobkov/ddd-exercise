@model PurchaseViewModel
@{
    Layout = "_Layout";
}

<form asp-controller="Balance" asp-action="AddPurchase">
    <h6>Add purchase</h6>

    <div>
        <div>
            <label asp-for="Title"></label>
            <div>
                <input asp-for="Title" type="text" />
            </div>
        </div>

        <div>
            <label asp-for="Purchase.Amount"></label>
            <input asp-for="Purchase.Amount" type="number" />
            <select asp-for="Purchase.Currency" asp-items="Model.Currencies"></select>
        </div>

        <div>
            <label asp-for="SpentAt"></label>
            <div class="input-group date datepicker">
                <input type="text" asp-for="SpentAt" class="form-control" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>

    <div>
        <button type="submit">Submit</button>
        <a asp-controller="Balance" asp-action="Index">Back</a>
    </div>
</form>
