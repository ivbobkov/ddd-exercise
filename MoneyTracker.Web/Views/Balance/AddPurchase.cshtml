@model PurchaseViewModel
@{
    Layout = "_Layout";
}

<form asp-controller="Balance" asp-action="AddPurchase">
    <p class="lead">Add purchase</p>

    <div class="form-row">
        <label asp-for="Purchase.Amount" class="col-md-2"></label>
        <div class="form-group col-md-10">
            <input asp-for="Purchase.Amount" type="number" class="form-control" />
        </div>
    </div>

    <div class="form-row">
        <label asp-for="Purchase.Currency" class="col-md-2"></label>
        <div class="form-group col-md-10">
            <input asp-for="Purchase.Currency" class="form-control" />
        </div>
    </div>

    <div class="form-row">
        <label asp-for="SpentAt" class="col-md-2"></label>
        <div class="form-group col-md-10">
            <input asp-for="SpentAt" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="Balance" asp-action="Index" class="btn btn-link">Back</a>
</form>
